<?xml version="1.0"?>
<!DOCTYPE :macro SYSTEM "/lml.dtd">

<:macro alias="titledpane" replace="content" id title icon>
    <vistable id="{id}" onecolumn="true" align="topleft">
        <container background="custom/tp-title-bg" fillx="true">
            <vistable padleft="6" padright="6" padbottom="2" padtop="2" align="left" tablealign="left">
                <:notnull test="{icon}">
                    <visimage style="{icon}" padright="4" padbottom="-1" color="title-icon-tint"/>
                </:notnull>
                <label text="{title}"/>
                <container id="titleExtraContainer" growx="true"/>
            </vistable>
        </container>
        {content}
    </vistable>
</:macro>